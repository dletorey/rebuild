<li class="card {{ post.data.contentType }}">  
  <header>
    <a href="{{ post.url }}"><h2>{{ post.data.title }}</h2></a>
  </header>
  <main>
    <p>{{ post.data.description }}</p>
    <small><time datetime="{{ post.data.date }}">{{ post.data.date.toDateString() }}</time></small> 
  </main>
  <footer>
    <ul class="tags">
      {% for tag in post.data.tags %}<li>{{ tag }}</li>{% endfor %}
    </ul>
  </footer>
</li>